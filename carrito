using carrito.Clases;
using System;
using System.Drawing;
using System.IO;
using System.Windows.Forms;

namespace carrito

{

    public partial class Form1 : Form
    {
       

        private bool encendido = false;
        private int acelerar = 0;
        ClsMoto moto = new ClsMoto("Kawasaki", "negro", 2010);
        private string[] canciones;

        public Form1(string.canciones )
        {
            canciones = canciones;
        }

        public object REPRODUCTOR { get; private set; }

        public Form1()
        {
            InitializeComponent();
        }

        private void buttonHolaMundo_Click(object sender, EventArgs e)
        {
            if (encendido == true)
            {
                moto.acelerar();
                acelerar += 10;
                if (moto.obtenerVelocidad()<=moto.obtenerVelocidadmaxima())
                {
                    labelVelocimetro.Text = moto.obtenerVelocidad().ToString() + "km/h";

                }
                else
                {
                    MessageBox.Show("Alcanzo la velocidad maxima");
                }
         
            }
            else
            {
                MessageBox.Show("Encienda el auto");

            }
        }

        private void buttonEncender_Click(object sender, EventArgs e)
        {
            if (encendido==false)
            { 
                labelEncender.Text = "Encendido";
                buttonEncender.Text = "Apagar";
                buttonEncender.BackColor = Color.Blue;
                moto.encenderCarro();
                encendido = true;

            }
            else
            {
                labelEncender.Text = "Apagado";
                buttonEncender.Text = "Encender";
                buttonEncender.BackColor = Color.LightGray;
                moto.apagarCarro();
                encendido = false;
            }
        }

        private void buttonFreno_Click(object sender, EventArgs e)
        {
            moto.frenar();
            labelVelocimetro.Text = moto.obtenerVelocidad().ToString() + "km/h";

        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }

        private void axWindowsMediaPlayer1_Enter(object sender, EventArgs e)
        {
            if (encendido == true )
            {
                canciones = Directory.GetFiles(@"C:\Users\diego\Music\MÃºsica", "*mp3");
                axWindowsMediaPlayer1 = canciones[0];

            }
            else
            {
                MessageBox.Show("Encienda el auto");
            }
        }
    }
    
}

